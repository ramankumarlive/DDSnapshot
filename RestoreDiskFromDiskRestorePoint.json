{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "diskName": {
            "type": "string",
            "defaultValue": "mypremiumv2datadisk1"
        },
        "diskSkuName": {
            "type": "string",
            "defaultValue": "Premiumv2_LRS"
        },
        "dataDiskSizeInGB": {
            "defaultValue": 1048,
            "type": "Int",
            "metadata": {
                "description": "Data Disk size in GiB."
            }
        },
        "diskIOPSReadWrite": {
            "defaultValue": 51200,
            "type": "Int",
            "metadata": {
                "description": "Data Disk IOPS value representing the maximum IOPS that the disk can achieve."
            }
        },
        "diskMbpsReadWrite": {
            "defaultValue": 768,
            "type": "Int",
            "metadata": {
                "description": "Data Disk MBps value representing the maximum throughput that the disk can achieve."
            }
        },
        "logicalSectorSize": {
            "defaultValue": 4096,
            "type": "Int",
            "metadata": {
                "descriptions": "Logical sector size in bytes for Premium v2 disk."
            }
        },
        "zone": {
            "type": "Int",
            "defaultValue": 2,
            "metadata": {
                "description": "Availability Zone of the VM and the disk"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "USEast2EUAP"
        },
        "dataDiskStampName": {
            "type": "String",
            "defaultValue": "CVL02PrdSDF02A",
            "metadata": {
                "description": "The name of the stamp."
            }
        },
        "sourceDiskRestorePointARMId": {
            "type": "string",
            "defaultValue": "/subscriptions/{subscription-id}/resourceGroups/myResourceGroup/providers/Microsoft.Compute/restorePointCollections/rpcName/restorePoints/restorePointName/diskRestorePoints/testingexcludedisk_DataDisk_1_68785190-1acb-4d5e-a8ae-705b45f3dca5"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/disks",
            "apiVersion": "2025-01-02",
            "name": "[parameters('diskName')]",
            "location": "[parameters('location')]",
            "zones": [
                "[parameters('zone')]"
            ],
            "sku": {
                "name": "[parameters('diskSkuName')]"
            },
            "properties": {
                "creationData": {
                    "createOption": "Copy",
                    "sourceResourceId": "[parameters('sourceDiskRestorePointARMId')]",
                    "logicalSectorSize": "[parameters('logicalSectorSize')]",
                    "StorageStampName": "[parameters('dataDiskStampName')]"
                },
                "diskSizeGB": "[parameters('dataDiskSizeInGB')]",
                "diskIOPSReadWrite": "[parameters('diskIOPSReadWrite')]",
                "diskMBpsReadWrite": "[parameters('diskMBpsReadWrite')]"
            }
        }
    ]
}
